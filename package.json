{
  "name": "yt2mp3",
  "version": "1.0.0",
  "description": "Convert videos from YouTube to tagged mp3 files.",
  "main": "app/main.js",
  "scripts": {
    "dev": "electron main.js",
    "pack": "concurrently \"webpack --config webpack.renderer.config.js\" \"webpack --config webpack.main.config.js\"",
    "release": "npm run pack && electron-builder"
  },
  "keywords": [],
  "private": true,
  "author": "ktucalvin",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.7.7",
    "babel-loader": "^8.0.6",
    "concurrently": "^5.0.2",
    "css-loader": "^3.4.0",
    "electron": "^5.0.6",
    "electron-builder": "^21.2.0",
    "html-loader": "^0.5.5",
    "html-webpack-plugin": "^3.2.0",
    "mini-css-extract-plugin": "^0.9.0",
    "optimize-css-assets-webpack-plugin": "^5.0.3",
    "terser-webpack-plugin": "^2.3.1",
    "webpack": "^4.41.4",
    "webpack-cli": "^3.3.10",
    "webpack-node-externals": "^1.7.2"
  },
  "dependencies": {
    "ffmpeg-static": "^2.7.0",
    "node-id3": "^0.1.13",
    "sanitize-filename": "^1.6.3",
    "ytdl-core": "^1.0.3"
  },
  "build": {
    "files": [
      "!node_modules/ffmpeg-static/**/*",
      "!.vscode",
      "!webpack*",
      "!src/**/*"
    ],
    "extraResources": [
      {
        "from": "node_modules/ffmpeg-static/bin/${platform}/${arch}/ffmpeg",
        "to": "ffmpeg"
      },
      {
        "from": "node_modules/ffmpeg-static/bin/${platform}/${arch}/ffmpeg.exe",
        "to": "ffmpeg.exe"
      }
    ]
  }
}
